User Function TTNOMCT(cCampo)

Local aArea	:=	GetArea()
Local lRet	:=	.T.
Local aAux	:=	{}

If cCampo == "U5_CONTAT"
	aAux := strtokarr(M->U5_CONTAT," ")
	If len(aAux) < 2
		MsgAlert("Preencha o nome e sobrenome do contato","TTMAILV - TTNOMCT")
		lRet := .F.
	EndIf
	
	M->U5_CONTAT := Alltrim(M->U5_CONTAT)+SPACE(30-LEN(Alltrim(M->U5_CONTAT)))
EndIf
	            
RestArea(aArea)

Return(lRet)