User Function TTMAILV(cEmail)

Local aArea		:=	GetArea()
Local lRet		:=	.T.
Local aEmails	:= 	strtokarr(cEmail,";")
Local aAux		:=	{}

For nX := 1 to len(aEmails)
	aAux := strtokarr(aEmails[nX],"@")
	If len(aAux) < 2
		MsgAlert("Email invแlido "+aEmails[nX],"TTMAILV")
		lRet := .F.
		exit 
	Else
		if !"." $ aAux[2]
			MsgAlert("Email invแlido "+aEmails[nX],"TTMAILV")
			lRet := .F.
			exit 
		EndIf
	EndIf
Next nX

RestArea(aArea)

Return(lRet)

